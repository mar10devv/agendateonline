---
import "../styles/global.css";
import NavbarBarberia from "../components/barberia/NavbarBarberia.tsx";
import HeroBarberia from "../components/barberia/HeroBarberia.tsx";

interface Props {
  title?: string;
  hoverColor?: string;
  logoUrl?: string;
  heroImages?: string[];
  nombre?: string;
  eslogan?: string;
  fuenteLogo?: string;
  fuenteTexto?: string;
  fuenteBotones?: string;
  children?: any;
}

const {
  title = "AgéndateOnline",
  hoverColor,
  logoUrl,
  heroImages = ["/img/1.jpeg", "/img/2.jpg", "/img/3.jpg"],
  nombre,
  eslogan,
  fuenteLogo = "montserrat",
  fuenteTexto = "raleway",
  fuenteBotones = "poppins",
  children,
} = Astro.props as Props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | AgendateOnline</title>
  </head>
  <body class="bg-white text-black">
    <!-- ✅ Navbar con color hover y logo -->
    <NavbarBarberia
      client:load
      title={title}
      hoverColor={hoverColor}
      logoUrl={logoUrl}
    />

    <!-- ✅ Hero con fuentes dinámicas -->
    <HeroBarberia
      client:load
      images={heroImages}
      nombre={nombre || title}
      eslogan={eslogan}
      fuenteLogo={fuenteLogo}
      fuenteTexto={fuenteTexto}
      fuenteBotones={fuenteBotones}
    />

    <main>{children}</main>
  </body>
</html>
